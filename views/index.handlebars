<div class="hero">
  <h1 class="title">Eat Da </h1>
  <h1 class="title" id="burger-text">Burger!</h1>
  <hr class="line">
</div>

<div class="burger-container">
  
  <div id="container-left">
    <h2>Burgers to be eaten</h2>
<i class="fas fa-camera"></i>
<i class="fas fa-hamburger"></i>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block sleep=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  <div id="container-right">
    <h2>Burgers That have been eaten</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block sleep=false}}
        {{/if}}
      {{/each}}
   </ul>
  </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Eaten!<br>
    <input type="radio" name="devoured" value="1"> unEaten
  </div>

  <button type="submit">Add Burger</button>
</form>